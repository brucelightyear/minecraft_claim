{
  "format_version": "1.21.60",
  "minecraft:block": {
    "description": {
      "identifier": "claim:block",
      "menu_category": {
        "category": "construction"
      },
      "states": {
        "claim:claimed": [0, 1]
      }
    },
    "components": {
      "minecraft:material_instances": {
        "*": {
          "texture": "claim_block",
          "render_method": "opaque"
        }
      },
      "minecraft:destructible_by_mining": {
        "seconds_to_destroy": 2.0
      },
      "minecraft:destructible_by_explosion": {
        "explosion_resistance": 10.0
      },
      "minecraft:friction": 0.6,
      "minecraft:light_emission": 5,
      "minecraft:transformation": { 
        "scale": [1.0, 1.0, 1.0]
      },
      "minecraft:placement_filter": {
        "conditions": [
          {
            "allowed_faces": ["up"],
            "block_filter": [
              "minecraft:grass",
              "minecraft:dirt",
              "minecraft:stone",
              "minecraft:deepslate"
            ]
          }
        ]
      }
    },
    "events": {
      "claim:set_claimed": {
        "set_block_state": {
          "claim:claimed": 1
        }
      },
      "claim:set_unclaimed": {
        "set_block_state": {
          "claim:claimed": 0
        }
      }
    },
    "permutations": [
      {
        "condition": "query.block_state('claim:claimed') == 1",
        "components": {
          "minecraft:material_instances": {
            "*": {
              "texture": "claim_block",
              "render_method": "opaque",
              "ambient_occlusion": false
            }
          }
        }
      }
    ]
  }
}